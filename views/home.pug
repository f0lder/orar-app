extends layout

block content

    if name == null 
        h2 You are not logged in
    else
        h2 Welcome back, #{name}.

        if sali == null
            h2 You are not allowed to see this resource or it does not exist.
        else
            table.table.table-striped
                thead
                    tr
                        th(scope="col") COD
                        th(scope="col") Corp
                        th(scope="col") Etaj
                        th(scope="col") Nr sala
                        th(scope="col") Capacitate
                tbody
                    each val in sali
                        tr
                            th(scope="row") #{val.cod}
                            td #{val.corp}
                            td #{val.etaj}
                            td #{val.numar}
                            td #{val.capacitate}
            each val in sali
                .card.d-inline-block.m-2(style="width: 14rem")
                    .card-header.text-center #{val.cod}
                    ul.list-group.list-group-flush
                        li.list-group-item.p-0.text-center
                            .row
                                .col.p-2 Corp 
                                .col.border-left.p-2 #{val.corp}
                        li.list-group-item.p-0.text-center
                            .row
                                .col.p-2 Etaj
                                .col.border-left.p-2 #{val.etaj}
                        li.list-group-item.p-0.text-center
                            .row 
                                .col.p-2 Nr. Sala
                                .col.border-left.p-2 #{val.numar}
                        li.list-group-item.p-0.text-center
                            .row
                                .col.p-2 Capacitate
                                .col.border-left.p-2 #{val.capacitate}