
extends layout

block content
    //Tot ce este legat de sati
    .container.row.border.m-auto.mt-4
        .col
            h2.display-5 Insereaza sala
            form(action="/sali/insertSala" method="post")
                .form-group.row.m-1.mt-4
                    //Corp A,b,c..
                    .col-4
                        label.col-form-label(for="corp") Corp:
                    .col
                        select.form-select(id="corp" name="corp")
                            option A
                            option B
                            option C
                            option D
                .form-group.row.m-1.mt-4
                    //etaj
                    .col-4
                        label.col-form-label(for="etaj") Etaj:
                    .col
                        select.form-select(id="etaj" name="etaj")
                            option(value='0') P
                            option 1
                            option 2
                            option 3
                .form-group.row.m-1.mt-4
                    //numar
                    .col-4
                        label.col-form-label(for="numar") Numar:
                    .col
                        input.form-control.is-invalid(id="numar" type="number" name="numar")
                        .invalid-feedback Nu poate fi mai mic decat 0!
                .form-group.row.m-1.mt-4
                    //capacitate
                    .col-4
                        label.col-form-label(for="capacitate") Capacitate:
                    .col
                        input.form-control.is-invalid(id="capacitate" type="number" name="capacitate")
                        .invalid-feedback Nu poate fi mai mic decat 0!
                .form-group.row.m-1.mt-4
                    //cod
                    .col-4
                        label.col-form-label(for="cod") Cod Generat:
                    .col
                        input.form-control(id="cod" type="text" readonly value="AP12")
                .form-grop.row.p-3
                    .col
                        button.btn.btn-primary.m-20(type="submit" id="iSala") Insereaza sala
                    .col.text-center
                        button.btn.btn-outline-secondary(type="reset" id="rSala") Reset
        if sali == null
            h2 You are not allowed to see this resource or it does not exist.
        else
            .col
                table.table.table-striped
                    thead
                        tr
                            th(scope="col") COD
                            th(scope="col") Corp
                            th(scope="col") Etaj
                            th(scope="col") Nr sala
                            th(scope="col") Capacitate
                            th(scope="col") Actiuni
                            th(scope="col") 
                    tbody
                        each val in sali
                            tr
                                th(scope="row") #{val.cod}
                                td #{val.corp}
                                if val.etaj == 0
                                    td P
                                else 
                                    td #{val.etaj}
                                td #{val.numar}
                                td #{val.capacitate}
                                td.edit
                                    svg.bi.bi-pencil(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                                        path(d='M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z')
                                td.dele
                                    a.b-none(href="/sali/delete/id=" + val.id data-bs-toggle="tooltip" data-bs-html="true" title="Sterge sala: "+ val.cod)
                                        svg.bi.bi-trash(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                                            path(d='M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z')
                                            path(d='M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z')



    script(src="javascripts/sali.js")