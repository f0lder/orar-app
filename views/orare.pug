extends layout 

block content 

    h1.display-2= title 
    p.lead Welcome to #{title} 

    .container-fluid 
        if orare != null 
            each orar in orare 
                .card.mt-3 
                    .card-header
                        .row
                            .col Grupa #{orar.grupa}
                            .col.d-flex.justify-content-end 
                                button.btn.btn-outline-primary Descarca pdf
                    .card-body 
                        table.table.table-bordered.table-hover 
                            thead 
                                tr 
                                th(scope="col" style="width:5%") Ora 
                                th(scope="col") Luni 
                                th(scope="col") Marti 
                                th(scope="col") Miercuri 
                                th(scope="col") Joi 
                                th(scope="col") Vineri 
                            tbody 
                                each zi in orar.zile 
                                    tr 
                                        th(scope="row") 9-11 
                                            each ora in zi.ora 
                                                if ora.Materie == "Liber" 
                                                    td  
                                                else 
                                                    td  
                                                        p.text-center #{ora.Materie}
                                                        p.text-center #{ora.tip} #{ora.idSala}